# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/linkup

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (Generate secure values for production!)
JWT_ACCESS_SECRET=your-access-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Object Storage (S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=linkup-uploads
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# AI Gateway
OPENAI_API_KEY=your-openai-api-key
AI_RATE_LIMIT_PER_HOUR=20
AI_COST_LIMIT_PER_DAY=0.50

# CORS
CORS_ORIGIN=http://localhost:5173
