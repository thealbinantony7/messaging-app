{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "baseUrl": ".",
        "rootDir": "../..",
        "paths": {
            "@linkup/shared": [
                "../../packages/shared/src/index.ts"
            ],
            "@linkup/shared/*": [
                "../../packages/shared/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../../packages/shared/src/**/*"
    ]
}